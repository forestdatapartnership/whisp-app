{
  "openapi": "3.0.0",
  "info": {
    "title": "Whisp App API",
    "version": "1.0.0",
    "description": "API for Whisp - An analytical tool for the support of zero-deforestation regulation claims"
  },
  "paths": {
    "/api/geojson": {
      "post": {
        "summary": "Submit GeoJSON for Analysis",
        "description": "Accepts a GeoJSON object, specifically a Feature with a Polygon geometry, for analysis.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "type": "FeatureCollection",
                  "features": [
                        {
                              "type": "Feature",
                              "geometry": {
                                    "type": "Polygon",
                                    "coordinates": [
                                          [
                                                [
                                                      -1.612173914909363,
                                                      6.160144879904404
                                                ],
                                                [
                                                      -1.6128122806549074,
                                                      6.159344862841789
                                                ],
                                                [
                                                      -1.6128337383270266,
                                                      6.15914219166122
                                                ],
                                                [
                                                      -1.6120773553848267,
                                                      6.158870185481485
                                                ],
                                                [
                                                      -1.611771583557129,
                                                      6.158838184745289
                                                ],
                                                [
                                                      -1.6111814975738528,
                                                      6.159483532552345
                                                ],
                                                [
                                                      -1.611224412918091,
                                                      6.160011543811027
                                                ],
                                                [
                                                      -1.6117393970489502,
                                                      6.160299549730771
                                                ],
                                                [
                                                      -1.612173914909363,
                                                      6.160144879904404
                                                ]
                                          ]
                                    ]
                              }
                        }
                  ]
            },
                "required": ["type", "properties", "geometry"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["Feature"]
                  },
                  "properties": {
                    "type": "object",
                    "additionalProperties": true
                  },
                  "geometry": {
                    "type": "object",
                    "required": ["type", "coordinates"],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["Polygon"]
                      },
                      "coordinates": {
                        "type": "array",
                        "items": {
                          "type": "array",
                          "items": {
                            "type": "array",
                            "items": {
                              "type": "number",
                              "minItems": 2,
                              "maxItems": 2
                            },
                            "minItems": 4
                          }
                        },
                        "minItems": 1 
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "GeoJSON analysis results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "description": "Analysis results of the GeoJSON"
                    },
                    "token": {
                      "type": "string",
                      "description": "Unique token for the analysis"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },        
    "/api/wkt": {
      "post": {
        "summary": "Submit WKT for Analysis",
        "description": "Accepts a WKT (Well-Known Text) string for analysis.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "wkt": "POLYGON((-4.286591893206829 5.545425708271704,-4.2872464587004755 5.54450734589365,-4.2883087863049205 5.54450734589365,-4.287901024194124 5.545607244851676,-4.286591893206829 5.545425708271704))"
                },
                "properties": {
                  "wkt": {
                    "type": "string",
                    "description": "WKT string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "WKT analysis results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "description": "Analysis results of WKT"
                    },
                    "token": {
                      "type": "string",
                      "description": "Unique token for the analysis"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
